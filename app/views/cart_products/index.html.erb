<%= form_with(model: cart_product, local: true) do |form| %>
    <div class="form-group">
      <%= form.label :quantity, "Quantity:" %>
      <%= form.text_field :quantity, value: cart_product.quantity, class: "form-control", min: 1 %>
    </div>
  
    <%= form.submit "Update Quantity", class: "btn btn-primary" %>
  <% end %>
  
  